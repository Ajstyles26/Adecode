@page
@model RegisterModel4
@{
    ViewData["Title"] = "New Admission Staff";
    Layout = "_ACUnifiedLoginLayout";
}
<style>

    .footer {
        text-align: center;
        padding: 10px 0;
        background-color: #333;
        color: #fff;
    }

    .gradient-custom-2 {
        /* fallback for old browsers */
        background: #735f3d;
        /* Chrome 10-25, Safari 5.1-6 */
        /*        background: -webkit-linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);*/
        background: -webkit-linear-gradient(to right, #735f3d, #7e6843, #8a7249, #957b4f);
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        /*        background: linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);*/

        background: linear-gradient(to right, #735f3d, #7e6843, #8a7249, #957b4f);
    }

